<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="398dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/last_imgIcon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_imgIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="제품명"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />

        <TextView
            android:id="@+id/last_txtproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/textViewmodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_txtproduct"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="제품카테고리"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />
        
        <TextView
            android:id="@+id/last_txtProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewmodel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_txtProductCategory"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="모델명"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />

        <TextView
            android:id="@+id/last_txtmodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_txtmodel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="제조국"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />

        <TextView
            android:id="@+id/last_txtmakingNation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_txtmakingNation"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="판매날짜"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />

        <TextView
            android:id="@+id/last_sellTerm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/last_sellTerm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/last_sellTerm1"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_sellTerm1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="리콜형태"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />
        
        <TextView
            android:id="@+id/last_recallNationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_recallNationType"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="리콜종류"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />
        
        <TextView
            android:id="@+id/last_recallType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_recallType"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="위해원인"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />
        
        <TextView
            android:id="@+id/last_harmCause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_harmCause"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="위해내용"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />
        
        <TextView
            android:id="@+id/last_harmContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_harmContents"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="리콜조치 원인"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />
        
        <TextView
            android:id="@+id/last_recallAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_recallAction"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="조치사항"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3F0099" />
        
        <TextView
            android:id="@+id/last_Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</ScrollView>